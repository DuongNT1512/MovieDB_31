<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="itemListGenresViewModel"
            type="com.framgia.moviedb_31.screen.listgenres.ItemListGenresViewModel"
            />
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@android:color/darker_gray"
        >
        <TextView
            android:id="@+id/text_genres_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star"
            android:gravity="center"
            android:text="@{itemListGenresViewModel.genres.genresId}"
            android:textAllCaps="true"
            android:textSize="@dimen/sp_18"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_genres_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemListGenresViewModel.genres.genresName}"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toBottomOf="@id/text_genres_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_genres_id"
            app:layout_constraintTop_toTopOf="@id/text_genres_id"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
